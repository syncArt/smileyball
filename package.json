{
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=7.0.0"
  },
  "name": "smileyball",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "prebuild": "npm run prebuild --workspaces --if-present",
    "pretest": "npm run prebuild --workspaces --if-present",
    "start": "npm start --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prettier": "npm run prettier --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "postinstall": "npx lefthook install",
    "gencandid": "candid-extractor target/wasm32-unknown-unknown/release/smileyball_backend.wasm > src/smileyball_backend/smileyball_backend.did"
  },
  "workspaces": [
    "src/smileyball_frontend"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "lefthook": "^1.7.18"
  }
}
